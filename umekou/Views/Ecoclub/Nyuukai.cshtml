                <form action="@Url.Content("~/Ecoclub/Form")" method="post">
                    <label>
                        お子様の氏名
                    </label>
                    <input type="text" id="child_name" name="child_name" class="span3" placeholder="入力欄" />

                    <label>
                        ふりがな
                    </label>
                    <input type="text" id="child_name_furigana" name="child_name_furigana" class="span3" placeholder="入力欄" />
                    @* 学年、年齢*@
                    <p>
                        <label class="lblSchool radio  inline">
                            <input type="radio" name="rdoState" id="rdoSchool" value="school" checked />
                            小学生
                        </label>
                        <label class="lblPreSchool radio  inline">
                            <input type="radio" name="rdoState" id="rdoPreSchool" value="preSchool" />
                            未就学
                        </label>
                    </p>
                    <p class="schoolInputArea" style="height:100px;">
                        <label>
                            学校名
                        </label>
                        <input type="text" id="school_name" class="span3" name="school_name" placeholder="入力欄" style="ime-mode:active;" />
                        <select name="class_year" id="class_year" class="class_year input-small">
                            <option>1年生</option>
                            <option>2年生</option>
                            <option>3年生</option>
                            <option>4年生</option>
                            <option>5年生</option>
                            <option>6年生</option>
                        </select>
                    </p>
                    <p class="preSchoolInputArea" style="height:100px;">
                        <label>
                            保育園名/幼稚園名
                        </label>
                        <input type="text" id="hoikuen_name" class="span3" name="hoikuen_name" placeholder="入力欄" style="ime-mode:active;" />
                        <br />
                        <select id="age" name="age" class="class_age span1">
                            @*  <option>1歳</option>
                        <option>2歳</option>*@
                            <option>3歳</option>
                            <option>4歳</option>
                            <option>5歳</option>
                            <option>6歳</option>
                        </select>

                    </p>
                    <label>
                        電話番号<span style="margin-left:10px; color:red;font-size:smaller;">※連絡のとれる番号でお願いいたします</span>
                    </label>
                    <input type="text" id="tel" class="span2" name="tel" style="ime-mode:disabled;">
                    <label>
                        FAX<span style="margin-left:10px; color:gray;font-size:smaller;">※あればお願いいたします</span>
                    </label>
                    <input type="text" id="fax" class="span2" name="fax" style="ime-mode:disabled;">
                    <label>
                        メールアドレス
                    </label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>
                            <input class="span3" id="email" name="email" type="text" style="ime-mode:disabled;" />
                        </div>
                    </div>

                    <label>
                        メールアドレス（確認用）
                    </label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>
                            <input class="span3" id="chk_email" name="chk_email" type="text" style="ime-mode:disabled;" />
                        </div>
                    </div>
                   

                    <button style="margin-top:20px;" onclick="return checkForm();" type="submit" class="btn btn-warning">
                        内容確認
                    </button>
                </form>








</div>
       
    </div>

